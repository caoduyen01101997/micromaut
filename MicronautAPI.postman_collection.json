  "item": [
    {
      "name": "Account",
      "item": [
        { "name": "List Users", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/account", "host": ["{{baseUrl}}"], "path": ["account"] } } },
        { "name": "Create User", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": {"mode":"raw","raw": "{\n  \"username\": \"user1\",\n  \"password\": \"123456\",\n  \"name\": \"User One\",\n  \"role\": \"VIEW\"\n}"}, "url": { "raw": "{{baseUrl}}/account", "host": ["{{baseUrl}}"], "path": ["account"] } } },
        { "name": "Update User", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": {"mode":"raw","raw": "{\n  \"id\": 1,\n  \"username\": \"user1\",\n  \"password\": \"123456\",\n  \"name\": \"User One Updated\",\n  \"role\": \"VIEW\"\n}"}, "url": { "raw": "{{baseUrl}}/account", "host": ["{{baseUrl}}"], "path": ["account"] } } },
        { "name": "Get User By Id", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/account/1", "host": ["{{baseUrl}}"], "path": ["account","1"] } } }
      ]
    },
    {
      "name": "Auth",
      "item": [
        { "name": "Login", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": {"mode":"raw","raw": "{\n  \"username\": \"user1\",\n  \"password\": \"123456\"\n}"}, "url": { "raw": "{{baseUrl}}/login", "host": ["{{baseUrl}}"], "path": ["login"] } } }
      ]
    },
    {
      "name": "Blog",
      "item": [
        { "name": "List Page", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/blog?page=0&size=10", "host": ["{{baseUrl}}"], "path": ["blog"], "query":[{"key":"page","value":"0"},{"key":"size","value":"10"}] } } },
        { "name": "Create", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"}], "body": {"mode":"raw","raw": "{\n  \"title\": \"Sample Blog\",\n  \"content\": \"Content here\",\n  \"author\": \"user1\"\n}"}, "url": { "raw": "{{baseUrl}}/blog", "host": ["{{baseUrl}}"], "path": ["blog"] } } },
        { "name": "Update", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"}], "body": {"mode":"raw","raw": "{\n  \"id\": 1,\n  \"title\": \"Updated Blog\",\n  \"content\": \"New content\",\n  \"author\": \"user1\"\n}"}, "url": { "raw": "{{baseUrl}}/blog", "host": ["{{baseUrl}}"], "path": ["blog"] } } },
        { "name": "Get By Id", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/blog/1", "host": ["{{baseUrl}}"], "path": ["blog","1"] } } },
        { "name": "Delete", "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/blog/1", "host": ["{{baseUrl}}"], "path": ["blog","1"] } } }
      ]
    },
    {
      "name": "Item",
      "item": [
        { "name": "List", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/items", "host": ["{{baseUrl}}"], "path": ["items"] } } },
        { "name": "Create Multipart", "request": { "method": "POST", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"formdata","formdata":[{"key":"name","value":"Item A","type":"text"},{"key":"price-sell","value":"100","type":"text"},{"key":"price-buy","value":"80","type":"text"},{"key":"image","type":"file","src":"/path/to/image.png"}]}, "url": { "raw": "{{baseUrl}}/items", "host": ["{{baseUrl}}"], "path": ["items"] } } },
        { "name": "Get By Id", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/items/1", "host": ["{{baseUrl}}"], "path": ["items","1"] } } },
        { "name": "Update", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"id\": 1,\n  \"name\": \"Item A Updated\",\n  \"priceSell\": 120,\n  \"priceBuy\": 85\n}"}, "url": { "raw": "{{baseUrl}}/items/1", "host": ["{{baseUrl}}"], "path": ["items","1"] } } },
        { "name": "Filtered", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/items/filtered?name=&priceSell=0&priceBuy=0", "host": ["{{baseUrl}}"], "path": ["items","filtered"], "query":[{"key":"name","value":""},{"key":"priceSell","value":"0"},{"key":"priceBuy","value":"0"}] } } },
        { "name": "Delete", "request": { "method": "DELETE", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/items/1", "host": ["{{baseUrl}}"], "path": ["items","1"] } } }

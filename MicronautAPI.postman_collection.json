        { "name": "Create", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"title\": \"Task 1\",\n  \"description\": \"Work desc\"\n}"}, "url": { "raw": "{{baseUrl}}/task", "host": ["{{baseUrl}}"], "path": ["task"] } } },
        { "name": "Update", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"id\": 1,\n  \"title\": \"Task 1 Updated\",\n  \"description\": \"New desc\"\n}"}, "url": { "raw": "{{baseUrl}}/task", "host": ["{{baseUrl}}"], "path": ["task"] } } },
        { "name": "Get By Id", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/task/1", "host": ["{{baseUrl}}"], "path": ["task","1"] } } },
        { "name": "Delete", "request": { "method": "DELETE", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/task/1", "host": ["{{baseUrl}}"], "path": ["task","1"] } } }
      ]
    },
    {
      "name": "TimeWaste",
      "item": [
        { "name": "List", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/time-waste?page=0&size=10", "host": ["{{baseUrl}}"], "path": ["time-waste"], "query":[{"key":"page","value":"0"},{"key":"size","value":"10"}] } } },
        { "name": "Create", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"title\": \"Waste 1\",\n  \"description\": \"Scrolling\"\n}"}, "url": { "raw": "{{baseUrl}}/time-waste", "host": ["{{baseUrl}}"], "path": ["time-waste"] } } },
        { "name": "Update", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"id\": 1,\n  \"title\": \"Waste 1 Updated\",\n  \"description\": \"Less scrolling\"\n}"}, "url": { "raw": "{{baseUrl}}/time-waste", "host": ["{{baseUrl}}"], "path": ["time-waste"] } } },
        { "name": "Get By Id", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/time-waste/1", "host": ["{{baseUrl}}"], "path": ["time-waste","1"] } } }

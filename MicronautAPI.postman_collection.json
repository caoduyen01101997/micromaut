        { "name": "List", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/vocabulary", "host": ["{{baseUrl}}"], "path": ["vocabulary"] } } },
        { "name": "Get By Id", "request": { "method": "GET", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/vocabulary/1", "host": ["{{baseUrl}}"], "path": ["vocabulary","1"] } } },
        { "name": "Update", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"},{"key":"Authorization","value":"Bearer {{token}}"}], "body": {"mode":"raw","raw": "{\n  \"word\": \"example\",\n  \"meaning\": \"ví dụ mới\",\n  \"note\": \"ghi chú mới\",\n  \"synonyms\": [\"sample\", \"case\"],\n  \"examples\": [\"Another example.\"]\n}"}, "url": { "raw": "{{baseUrl}}/vocabulary/1", "host": ["{{baseUrl}}"], "path": ["vocabulary","1"] } } },
        { "name": "Delete", "request": { "method": "DELETE", "header": [{"key":"Authorization","value":"Bearer {{token}}"}], "url": { "raw": "{{baseUrl}}/vocabulary/1", "host": ["{{baseUrl}}"], "path": ["vocabulary","1"] } } }
      ]
